{% if gitlab_nginx_ssl_key is defined or gitlab_nginx_ssl_enabled == True %}
external_url "https://{{ ansible_fqdn }}{% if gitlab_nginx_ssl_port != 443 %}:{{ gitlab_nginx_ssl_port }}{% endif %}"
{% else %}
external_url "http://{{ ansible_fqdn }}"
{% endif -%}

