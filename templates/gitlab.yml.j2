{% if gitlab_env is defined %}
gitlab_rails['env'] =
  {% if gitlab_env.bundle_gemfile is defined %}
  'BUNDLE_GEMFILE' => "{{ gitlab_env.bundle_gemfile | default('/opt/gitlab/embedded/service/gitlab-rails/Gemfile') }}",
  {% endif %}
  {% if gitlab_env.path is defined -%}
  'PATH' => "{{ gitlab_env.path | default('/opt/gitlab/bin:/opt/gitlab/embedded/bin:/bin:/usr/bin') }}"
  {% endif %}
}
{% endif %}

{% if gitlab_dir is defined or gitlab_log_directory is defined %}# We do not recommend changing these directories.{% endif %}
{% if gitlab_dir is defined %} gitlab_rails['dir'] = "{{ gitlab_dir | default('/var/opt/gitlab/gitlab-rails') }}"{% endif %}
{% if gitlab_log_directory is defined %} gitlab_rails['log_directory'] = "{{ gitlab_log_directory | default('/var/log/gitlab/gitlab-rails') }}"{% endif %}