  gitlab_extra_google_analytics_id is defined or
  gitlab_extra_piwik_url is defined or
  gitlab_extra_piwik_id is defined or
  gitlab_extra_sign_in_text is defined or
  gitlab_env is defined
%}
## Extra customization
{% endif -%}
